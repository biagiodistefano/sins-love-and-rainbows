# /etc/systemd/system/celery-beat-slr.service

[Unit]
Description=slr celery beat daemon

[Service]
User=biagio
WorkingDirectory=/home/biagio/sins-love-and-rainbows/src
ExecStart=/home/biagio/sins-love-and-rainbows/.venv/bin/celery -A sinsloveandrainbows beat -l info --scheduler django_celery_beat.schedulers:DatabaseScheduler

[Install]
WantedBy=multi-user.target